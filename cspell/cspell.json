{
  /* cSpell:enable */
  "version": "0.2",
  "language": "en",
  "ignorePaths": [
    "./.config/X11/Xresources",
    "./.config/anyenv/anyenv-install",
    "./.config/nvim/rc/"
  ],
  "dictionaries": [
    "en_US",
    "misc",
    "companies",
    "softwareTerms",
    "python",
    "fonts",
    "filetypes",
    "bash",
    "vim",
    "local"
  ],
  "dictionaryDefinitions": [
    {
      "name": "vim",
      "file": "~/.config/cspell/vim.txt.gz",
      "description": "Vim Script Language Dictionary"
    },
    {
      "name": "local",
      "file": "~/.config/nvim/cspell.txt",
      "description": "Local Dictionary",
      "addWords": true
    }
  ],
  "patterns": [
    {
      "name": "comment-single-line",
      "pattern": "/#.*/g"
    },
    {
      "name": "comment-multi-line",
      "pattern": "/(?:\\/\\*[\\s\\S]*?\\*\\/)/g"
    },
    {
      "name": "comments",
      "pattern": ["comment-single-line", "comment-multi-line"]
    }
  ],
  "languageSettings": [
    {
      "languageId": "lua",
      "locale": "*",
      "ignoreRegExpList": ["/require.*/", "\".*\""],
      "dictionaries": ["lua"],
      "dictionaryDefinitions": []
    },
    {
      "languageId": "php",
      "locale": "*",
      "ignoreRegExpList": ["/require.*/", "\".*\""],
      "dictionaries": ["php"],
      "dictionaryDefinitions": []
    }
  ],
  //"ignoreRegExpList": ["comments"],
  "words": [],
  "flagWords": ["hte"]
}
